#!/usr/bin/make -f

export PYBUILD_NAME=gnome-cast-player

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	dh_auto_install
	# Install the main application files
	install -D -m 755 videoplayer.py debian/gnome-cast-player/usr/bin/gnome-cast-player
	install -D -m 644 i18n.py debian/gnome-cast-player/usr/share/gnome-cast-player/i18n.py

	# Install locale files
	mkdir -p debian/gnome-cast-player/usr/share/locale/de/LC_MESSAGES
	mkdir -p debian/gnome-cast-player/usr/share/locale/en/LC_MESSAGES
	install -D -m 644 locale/de/LC_MESSAGES/gnome-cast-player.po debian/gnome-cast-player/usr/share/locale/de/LC_MESSAGES/gnome-cast-player.po
	install -D -m 644 locale/en/LC_MESSAGES/gnome-cast-player.po debian/gnome-cast-player/usr/share/locale/en/LC_MESSAGES/gnome-cast-player.po

	# Compile .po files to .mo files
	msgfmt locale/de/LC_MESSAGES/gnome-cast-player.po -o debian/gnome-cast-player/usr/share/locale/de/LC_MESSAGES/gnome-cast-player.mo
	msgfmt locale/en/LC_MESSAGES/gnome-cast-player.po -o debian/gnome-cast-player/usr/share/locale/en/LC_MESSAGES/gnome-cast-player.mo

	# Install icon if it exists (with both names for compatibility)
	if [ -f icon.svg ]; then \
		install -D -m 644 icon.svg debian/gnome-cast-player/usr/share/icons/hicolor/scalable/apps/gnome-cast-player.svg; \
		install -D -m 644 icon.svg debian/gnome-cast-player/usr/share/icons/hicolor/scalable/apps/com.videocast.player.svg; \
	elif [ -f gnome-cast-player.svg ]; then \
		install -D -m 644 gnome-cast-player.svg debian/gnome-cast-player/usr/share/icons/hicolor/scalable/apps/gnome-cast-player.svg; \
		install -D -m 644 gnome-cast-player.svg debian/gnome-cast-player/usr/share/icons/hicolor/scalable/apps/com.videocast.player.svg; \
	elif [ -f icon.png ]; then \
		install -D -m 644 icon.png debian/gnome-cast-player/usr/share/pixmaps/gnome-cast-player.png; \
		install -D -m 644 icon.png debian/gnome-cast-player/usr/share/pixmaps/com.videocast.player.png; \
	fi

	# Install desktop file if it exists
	if [ -f gnome-cast-player.desktop ]; then \
		install -D -m 644 gnome-cast-player.desktop debian/gnome-cast-player/usr/share/applications/gnome-cast-player.desktop; \
	fi

override_dh_auto_clean:
	dh_auto_clean
	rm -f *.pyc
	rm -rf __pycache__
	rm -rf .pytest_cache
	rm -rf *.egg-info
